% For PDFLATEX
\usefonttheme{professionalfonts}

% Title font
\setbeamerfont{title}{size=\Large, series=\bfseries}
\setbeamercolor{title}{fg=white}

% Subtitle font
\setbeamerfont{subtitle}{size=\large, series=\normalfont}
\setbeamercolor{subtitle}{fg=white}

\setbeamerfont{institute}{size=\normalsize, series=\normalfont}
\setbeamercolor{institute}{fg=white}

% Author font
\setbeamerfont{author}{size=\large, series=\normalfont}
\setbeamercolor{author}{fg=white}
% Footline
\setbeamerfont{framecounter in head/foot}{size=\small}\setbeamercolor{framecounter in head/foot}{fg=white}
\setbeamerfont{department in head/foot}{size=\small, series=\bfseries}\setbeamercolor{department in head/foot}{fg=white}
\setbeamerfont{title in head/foot}{size=\small}\setbeamercolor{title in head/foot}{fg=white}
\setbeamerfont{date in head/foot}{size=\small}\setbeamercolor{date in head/foot}{fg=white}

% Frametitle
\setbeamerfont{frametitle}{size=\Large, series=\bfseries}\setbeamercolor{frametitle}{fg=white}
\setbeamerfont{block body}{size=\large}\setbeamercolor{block body}{fg=white}
\setbeamerfont{section title}{size=\normalsize}\setbeamercolor{section title}{fg=white}
\setbeamerfont{block body alerted}{size=\large}\setbeamercolor{block body alerted}{fg=white}
\setbeamerfont{block body example}{size=\large}\setbeamercolor{block body example}{fg=white}
\setbeamerfont{block title}{size=\large,parent={structure,block body}}\setbeamercolor{block title}{fg=white}
\setbeamerfont{block title alerted}{size=\large,parent={block title,alerted text}}\setbeamercolor{block title alerted}{fg=white}
\setbeamerfont{block title example}{size=\large,parent={block title,example text}}\setbeamercolor{block title example}{fg=white}
\setbeamerfont{itemize/enumerate body}{size=\large}\setbeamercolor{itemize/enumerate body}{fg=white}
\setbeamerfont{itemize/enumerate subbody}{size=\large}\setbeamercolor{itemize/enumerate body}{fg=white}
\setbeamerfont{caption name}{size=\large}\setbeamercolor{caption name}{fg=white}
\setbeamerfont{caption}{size=\large}\setbeamercolor{caption}{fg=white}
\setbeamertemplate{caption}[numbered]
\setbeamerfont{footline}{size=\small}\setbeamercolor{footline}{fg=white}

\setbeamertemplate{enumerate items}[circle]
\setbeamercolor{item projected}{fg=white,bg=dtudarkergrey}
\setbeamerfont{item projected}{size=\normalsize}

% Itemize
\setbeamertemplate{items}[circle]
